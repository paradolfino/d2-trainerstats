<h3 class="text-center">Audit Trail</h3>
<p class="text-center"></p>

<table class="table text-center">
    <thead>
        <tr>
            <th>Event Date/Time Logged</th>
            <th>User</th>
            <th>Action</th>
            <th>Event</th>
        </tr>
    </thead>
    <tbody>
        <% @events.each do |t| %>
            <tr>
                <td><%= t.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%Y at %H:%M") %></td>
                <td><%= t.member %></td>
                <td><%= t.company %></td>
                <td><%= t.trainer %></td> 
                <td><%= t.stage %></td> 
                <td><%= t.status %></td> 
                <% if t.notes == "" %>
                    <td>No</td>
                <% else %>
                    <td>Yes</td>
                <% end %>
                <td><%= link_to fa_icon("search", text: "View"), log_training_path(t) %> <% if is_admin? %>| <%= link_to fa_icon("trash", text: "Delete"), log_training_path(t), method: :delete %></td><% end %>
            </tr>
        <% end %>
    </tbody>
</table>

<div class="options">
    <% if user_signed_in? %><%= link_to "Log a New Training", new_log_training_path(@log) %> |<% end %> <%= link_to "Go back to all Logs", logs_path %>
</div>