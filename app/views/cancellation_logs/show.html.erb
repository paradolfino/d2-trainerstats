<h3 class="text-center"><%= @log.title %> Log <small>[with <%= @log.cancellations.count %> cancellations logged.]</small></h3>
<% if params[:sort] %><h5 class="text-center">Showing <%= "#{pluralize(@count, 'training')}" %> for Reason: <%= params[:sort] %></h5><% end %>
<p class="text-center"><%= link_to fa_icon("download", text: "CSV"), cancellation_log_path(format: "csv") %> | <%= link_to fa_icon("download", text: "XLS"), cancellation_log_path(format: "xls") %></p>


<table class="table text-center">
    <thead>
        <tr>
            <th>Training Date/Time Logged</th>
            <th>Member Name</th>
            <th>Company Name</th>
            <th><%= select_tag "filter", options_for_select(), :onchange => "filter()", prompt: "Reason" %></th>
            <th>Has Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @trainings.each do |t| %>
            <tr>
                <td><%= t.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%Y at %H:%M") %></td>
                <td><%= t.member %></td>
                <td><%= t.company %></td>
                <td><%= t.reason %></td> 
                <% if t.notes == "" %>
                    <td>No</td>
                <% else %>
                    <td>Yes</td>
                <% end %>
                <td><%= link_to fa_icon("search", text: "View"), cancellation_log_cancellation_path(t) %> <% if is_admin? %>| <%= link_to fa_icon("trash", text: "Delete"), cancellation_log_cancellation_path(t), method: :delete %></td><% end %>
            </tr>
        <% end %>
    </tbody>
</table>

<div class="options">
    <% if user_signed_in? %><%= link_to "Log a New Training", new_log_training_path(@log) %> |<% end %> <%= link_to "Go back to all Logs", logs_path %>
</div>

<script>
    function filter() {
        val = $("#filter").find(":selected").text();
        window.location.replace("/logs/" + <%= @log.id %> + "?sort=" + val);
    }
</script>