<h3 class="text-center">Users List</h3>

<table class="table text-center">
    <thead>
        <tr>
            <th>Date Created</th>
            <th>Name</th>
            <th>Email</th>
            <th>Is Admin?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |t| %>
            <tr>
                <td><%= t.created_at.strftime("%m/%d/%Y") %></td>
                <td><%= t.fullname %></td>
                <td><%= t.email %></td>
                <td><%= t.role %></td>
                <td> <%= link_to fa_icon("edit", text: "Edit"), edit_user_path(t) %> | <%= link_to fa_icon("trash", text: "Delete"), user_path(t), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>

    <div class="options">
        <% if user_signed_in? %> <%= link_to fa_icon("plus-circle", text: "New Log"), new_log_path %> | <% end %><%= link_to fa_icon("search", text: "View Inactive"), inactive_logs_path %>
    </div>
