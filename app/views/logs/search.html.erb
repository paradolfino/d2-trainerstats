<h3 class="text-center">Showing Logs</h3>
<table class="table text-center">
    <thead>
        <tr>
            <th>Member Name</th>
            <th>Company Name</th>
            <th><%= select_tag "filter", options_from_collection_for_select(@users, :fullname, :fullname), :onchange => "", prompt: "Trainer" %></th>
            <th>Type/Stage</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% if params[:query] %>
        <% @trainings.each do |t| %>
            <% if search_compare(t[1][:info][@query], @string) %>
            <tr>
                <td><%= t[1][:info]["member"] %></td>
                <td><%= t[1][:info]["company"] %></td>
                <td><%= t[1][:info]["trainer"] %></td> 
                <td><%= t[1][:info]["stage"] %></td> 
                <td><%= t[1][:info]["status"] %></td> 
                
            </tr>
            <% end %>
        <% end %>
        <% end %>
    </tbody>
</table>