<h3 class="text-center">Active Logs (<%= @active %>/<%= @total %>) [<small>with a total of (<%= @total_trainings %>) trainings logged.</small>]</h3>
<table class="table text-center">
    <thead>
        <tr>
            <th>Training Date/Time Logged</th>
            <th>Member Name</th>
            <th>Company Name</th>
            <th><%= select_tag "filter", options_from_collection_for_select(@users, :fullname, :fullname), :onchange => "filter()", prompt: "Trainer" %></th>
            <th>Type/Stage</th>
            <th>Status</th>
            <th>Has Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @logs.each do |log| %>
            <% log.trainings.each do |t| %>
                <tr>
                    <td><%= t.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%Y at %H:%M") %></td>
                    <td><%= t.member %></td>
                    <td><%= t.company %></td>
                    <td><%= t.trainer %></td> 
                    <td><%= t.stage %></td> 
                    <td><%= t.status %></td> 
                    <% if t.notes == "" %>
                        <td>No</td>
                    <% else %>
                        <td>Yes</td>
                    <% end %>
                    
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>