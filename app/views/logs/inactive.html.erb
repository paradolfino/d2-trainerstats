<h3 class="text-center">Inactive Logs (<%= @inactive %>/<%= @total %>) [<small>with a total of (<%= @total_trainings %>) trainings logged.</small>]</h3>

<table class="table text-center">
    <thead>
        <tr>
            <th>Date Created</th>
            <th>Log Title</th>
            <th>Options</th>
            <th># of Trainings</th>
        </tr>
    </thead>
    <tbody>
        <% @logs.each do |t| %>
            <tr>
                <td><%= t.created_at.strftime("%m/%d/%Y") %></td>
                <td><%= link_to t.title, log_path(t) %></td>
                <td><%= link_to "Edit", edit_log_path(t) %></td>
                <td><%= t.trainings.count %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<div id="options">
    <%= link_to "View Active Logs", logs_path %>
</div>