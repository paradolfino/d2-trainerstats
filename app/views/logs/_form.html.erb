<%= form_for @log do |f| %>
    <%= f.label "What is the #{:title}?" %><br/>
    <%= f.text_field :title %><br/>
    <%= f.label :active %><br/>
    <%= f.label :active, "Yes", value: "true" %>
    <%= f.radio_button :active, true, :checked => true %>
    <%= f.label :active, "No", value: "false" %>
    <%= f.radio_button :active, false %><br/>
    <%= f.submit "Submit" %>
<% end %>