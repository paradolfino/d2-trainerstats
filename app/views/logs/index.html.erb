<h3>Active Logs</h3>
<hr/>
<table>
    <thead>
        <tr>
            <th>Time Created</th>
            <th>Log Title</th>
        </tr>
    </thead>
    <tbody>
        <% @logs.each do |t| %>
            <tr>
                <td><%= t.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%Y at %H:%M") %></td>
                <td><%= t.title %></td>
                <td><%= link_to "Edit", edit_log_path(t) %> | <%= link_to "Delete", log_path(t), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Create a new Log", root_path %>