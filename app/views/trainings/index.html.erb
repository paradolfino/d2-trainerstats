<h3>Trainings Log</h3>
<hr/>
<table>
    <thead>
        <tr>
            <th>Time Logged</th>
            <th>Member Name</th>
            <th>Company Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @trainings.each do |t| %>
            <tr>
                <td><%= t.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%Y at %H:%M") %></td>
                <td><%= t.member %></td>
                <td><%= t.company %></td>    
                <td><%= link_to "Edit", edit_log_training_path(t) %> | <%= link_to "Delete", log_training_path(t), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Log a New Training", new_log_path %>